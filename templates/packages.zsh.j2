zplug "zplug/zplug", hook-build:"zplug --self-manage"
{% for plugin in zplug_plugins %}
zplug "{{ plugin.name }}"
{%- if "as" in plugin %}
, as:{{ plugin.as }}
{%- endif %}
{% if "use" in plugin %}
, use:"{{ plugin.use }}"
{%- endif %}
{% if "ignore" in plugin %}
, ignore:"{{ plugin.ignore }}"
{%- endif %}
{% if "from" in plugin %}
, from:{{ plugin.from }}
{%- endif %}
{% if "at" in plugin %}
, at:{{ plugin.at }}
{%- endif %}
{% if "rename-to" in plugin %}
, rename-to:"{{ plugin.rename-to }}"
{%- endif %}
{% if "dir" in plugin %}
, dir:"{{ plugin.use }}"
{%- endif %}
{% if "if" in plugin %}
, if:"{{ plugin.if }}"
{%- endif %}
{% if "hook-build" in plugin %}
, hook-build:"{{ plugin.hook-build }}"
{%- endif %}
{% if "hook-load" in plugin %}
, hook-load:"{{ plugin.hook-load }}"
{%- endif %}
{% if "frozen" in plugin %}
, frozen:{{ plugin.frozen }}
{%- endif %}
{% if "on" in plugin %}
, on:{{ plugin.on }}
{%- endif %}
{% if "defer" in plugin %}
, defer:{{ plugin.defer }}
{%- endif %}
{% if "lazy" in plugin %}
, lazy:{{ plugin.lazy }}
{%- endif %}
{% if "depth" in plugin %}
, depth:{{ plugin.depth }}
{%- endif %}

{% endfor %}